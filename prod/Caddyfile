}

# -------------------------------
# Canonical redirects
# -------------------------------

# Main site: www -> apex
www.wisdomchurchhq.org {
	redir https://wisdomchurchhq.org{uri} permanent
}

# Admin site: www -> apex (CORRECT for your Namecheap domain)
www.admin-portalwisdomchurch.org {
	redir https://admin-portalwisdomchurch.org{uri} permanent
}

# -------------------------------
# Main Website (CANONICAL)
# -------------------------------
wisdomchurchhq.org {
	encode zstd gzip

	header {
		Strict-Transport-Security "max-age=31536000"
		X-Frame-Options "DENY"
		X-Content-Type-Options "nosniff"
		Referrer-Policy "strict-origin-when-cross-origin"
		Permissions-Policy "camera=(), microphone=(), geolocation=()"
	}

	reverse_proxy wisdom_frontend:2000 {
		header_up X-Real-IP {remote_host}
		header_up X-Forwarded-For {remote_host}
		header_up X-Forwarded-Proto {scheme}
	}
}

# -------------------------------
# Admin Portal (CANONICAL)
# -------------------------------
admin-portalwisdomchurch.org {
	encode zstd gzip

	header {
		Strict-Transport-Security "max-age=31536000"
		X-Frame-Options "DENY"
		X-Content-Type-Options "nosniff"
		Referrer-Policy "strict-origin-when-cross-origin"
		Permissions-Policy "camera=(), microphone=(), geolocation=()"
	}

	reverse_proxy wisdom_admin:3000 {
		header_up X-Real-IP {remote_host}
		header_up X-Forwarded-For {remote_host}
		header_up X-Forwarded-Proto {scheme}
	}
}

# -------------------------------
# API (subdomain of wisdomchurchhq.org)
# -------------------------------
api.wisdomchurchhq.org {
	encode zstd gzip

	# Security headers
	header {
		Strict-Transport-Security "max-age=31536000"
		X-Content-Type-Options "nosniff"
		Referrer-Policy "no-referrer"
	}

	route {
		# Preflight for allowed origins
		@preflight {
			method OPTIONS
			header Origin https://admin-portalwisdomchurch.org https://wisdomchurchhq.org https://www.wisdomchurchhq.org
		}

		handle @preflight {
			header Access-Control-Allow-Origin "{http.request.header.Origin}"
			header Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
			header Access-Control-Allow-Headers "Authorization, Content-Type, X-Requested-With"
			header Access-Control-Allow-Credentials "true"
			header Access-Control-Max-Age "86400"
			header Vary "Origin"
			respond "" 204
		}

		# Actual requests: only apply CORS when origin matches allowed list
		@allowed_origin header Origin https://admin-portalwisdomchurch.org https://wisdomchurchhq.org https://www.wisdomchurchhq.org

		handle {
			header @allowed_origin {
				Access-Control-Allow-Origin "{http.request.header.Origin}"
				Access-Control-Allow-Credentials "true"
				Vary "Origin"
			}

			reverse_proxy wisdom_api:8080 {
				header_up X-Real-IP {remote_host}
				header_up X-Forwarded-For {remote_host}
				header_up X-Forwarded-Proto {scheme}
			}
		}
	}
}

